{
  "name": "enhanced-silverstripe-templates",
  "displayName": "Enhanced SilverStripe Template Language",
  "description": "SilverStripe Template Language Highlighter and Snippets",
  "version": "0.0.12",
  "author": "Emmanuel Davies",
  "engines": {
    "vscode": "^1.105.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "contributes": {
    "languages": [
      {
        "id": "silverstripe",
        "aliases": ["SilverStripe", "silverstripe", "SS", "ss"],
        "extensions": [".ss"],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "silverstripe",
        "scopeName": "text.html.silverstripe",
        "path": "./syntaxes/silverstripe.tmLanguage.json"
      },
      {
        "scopeName": "source.silverstripe.injection",
        "path": "./syntaxes/silverstripe-injection.tmLanguage.json",
        "injectTo": [
          "text.html.silverstripe"
        ]
      }
    ],
    "configurationDefaults": {
      "files.associations": {
        "*.ss": "silverstripe"
      }
    },
    "snippets": [
      {
        "language": "silverstripe",
        "path": "./silverstripe.code-snippets.json"
      }
    ]
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.105.0",
    "@types/mocha": "^10.0.7",
    "@types/node": "20.x",
    "eslint": "^8.57.0",
    "typescript": "^5.4.5",
    "@vscode/test-cli": "^0.0.9",
    "@vscode/test-electron": "^2.4.0"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com:meteora-digital/silverstripe-syntax-highlighter.git"
  },
  "icon": "icon.png",
  "publisher": "Ranfurly"
}
