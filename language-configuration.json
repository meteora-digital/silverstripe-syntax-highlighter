{
  "comments": {
    "blockComment": ["<%--", "--%>"]
  },
  "brackets": [
    ["{", "}"],
    ["[", "]"],
    ["(", ")"],
    ["<", ">"],
    ["<%", "%>"]
  ],
  "autoClosingPairs": [
    ["{", "}"],
    ["[", "]"],
    ["(", ")"],
    ["\"", "\""],
    ["'", "'"],
    ["<%", "%>"]
  ],
  "surroundingPairs": [
    ["{", "}"],
    ["[", "]"],
    ["(", ")"],
    ["\"", "\""],
    ["'", "'"],
    ["<%", "%>"]
  ],
  "onEnterRules": [
    {
        "beforeText": "^\\s*<%\\s*(loop|with|if|else_if|else)\\b.*%>\\s*$",
        "action": {
            "indent": "indent"
        }
    },
    {
        "beforeText": "^\\s*<([a-zA-Z][\\w\\-]*)[^>]*>\\s*$",
        "afterText": "^\\s*</[a-zA-Z][\\w\\-]*>\\s*$",
        "action": {
            "indent": "indentOutdent",
        }
    }
  ],
}
