{
    "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
    "name": "Silverstripe Injection",
    "scopeName": "source.silverstripe.injection",
    "injectionSelector": "L:text.html.silverstripe, L:text.html.basic, L:source.css, L:source.js",
    "patterns": [
        {
            "include": "#commentBlock"
        },
        {
            "include": "#variablePatterns"
        },
        {
            "name": "keyword.silverstripe",
            "begin": "<%(?!-)",
            "beginCaptures": {
                "0": {
                    "name": "punctuation.definition.silverstripe"
                }
            },
            "end": "(?<!-)%>",
            "endCaptures": {
                "0": {
                    "name": "punctuation.definition.silverstripe"
                }
            },
            "patterns": [
                {
                    "name": "punctuation.separator.silverstripe",
                    "match": ","
                },
                {
                    "include": "#includeControl"
                },
                {
                    "include": "#ifControl"
                },
                {
                    "include": "#string"
                }
            ]
        }
    ],
    "repository": {
        "commentBlock": {
            "name": "comment.block.silverstripe",
            "begin": "<%--",
            "beginCaptures": {
                "0": {
                    "name": "punctuation.definition.comment.begin.silverstripe"
                }
            },
            "end": "--%>",
            "endCaptures": {
                "0": {
                    "name": "punctuation.definition.comment.end.silverstripe"
                }
            },
            "contentName": "comment.block.silverstripe",
            "patterns": [
                {
                    "match": "(?:(?!--%>).)+",
                    "name": "comment.block.silverstripe"
                }
            ]
        },
        "string": {
            "patterns": [
                {
                    "name": "string.quoted.double.silverstripe string.silverstripe",
                    "begin": "\"",
                    "beginCaptures": {
                        "0": {
                            "name": "punctuation.definition.string.begin.html.silverstripe"
                        }
                    },
                    "end": "\"",
                    "endCaptures": {
                        "0": {
                            "name": "punctuation.definition.string.end.html.silverstripe"
                        }
                    }
                },
                {
                    "name": "string.quoted.single.silverstripe string.silverstripe",
                    "begin": "'",
                    "beginCaptures": {
                        "0": {
                            "name": "punctuation.definition.string.begin.html.silverstripe"
                        }
                    },
                    "end": "'",
                    "endCaptures": {
                        "0": {
                            "name": "punctuation.definition.string.end.html.silverstripe"
                        }
                    }
                }
            ]
        },
        "accessChain": {
            "patterns": [
                {
                    "name": "entity.name.function.silverstripe",
                    "match": "(\\.[a-zA-Z_][\\w]*)(?=\\()"
                },
                {
                    "name": "entity.name.function.silverstripe",
                    "match": "\\.[a-zA-Z_][\\w]*"
                },
                {
                    "name": "entity.name.function.silverstripe",
                    "begin": "\\(",
                    "end": "\\)",
                    "patterns": [
                        {
                            "include": "#variablePatterns"
                        },
                        {
                            "include": "#string"
                        },
                        {
                            "match": ",",
                            "name": "punctuation.separator.argument.silverstripe"
                        },
                        {
                            "include": "#commonExpressions"
                        }
                    ]
                }
            ]
        },
        "commonExpressions": {
            "patterns": [
                {
                    "match": "\\b\\d+\\b",
                    "name": "constant.numeric.silverstripe"
                },
                {
                    "match": "\\bnot\\b|!",
                    "name": "keyword.operator.logical.not.silverstripe"
                },
                {
                    "match": "==|=|!=|<=|>=|<|>|&&|\\|\\|",
                    "name": "keyword.operator.logical.silverstripe"
                }
            ]
        },
        "bracedVariable": {
            "name": "entity.name.silverstripe variable.silverstripe.braced",
            "begin": "(\\{)(\\$)",
            "beginCaptures": {
                "1": {
                    "name": "entity.name.silverstripe variable.silverstripe.brace"
                },
                "2": {
                    "name": "entity.name.silverstripe variable.silverstripe"
                }
            },
            "end": "(\\})",
            "endCaptures": {
                "1": {
                    "name": "entity.name.silverstripe variable.silverstripe.brace"
                }
            },
            "patterns": [
                {
                    "include": "#string"
                },
                {
                    "include": "#accessChain"
                }
            ]
        },
        "complexVariable": {
            "name": "entity.name.silverstripe variable.silverstripe.complex",
            "begin": "(\\$[a-zA-Z_][\\w]*)",
            "beginCaptures": {
                "1": {
                    "name": "entity.name.silverstripe variable.silverstripe"
                }
            },
            "end": "(?=\\s|$|[^\\w\\.$\\(\\)']|\\))",
            "patterns": [
                {
                    "include": "#accessChain"
                }
            ]
        },
        "simpleVariable": {
            "name": "entity.name.silverstripe variable.silverstripe.simple",
            "match": "\\$[a-zA-Z_][\\w]*"
        },
        "variablePatterns": {
            "patterns": [
                {
                    "include": "#bracedVariable"
                },
                {
                    "include": "#complexVariable"
                },
                {
                    "include": "#simpleVariable"
                }
            ]
        },
        "ifControl": {
            "name": "meta.control.if.silverstripe",
            "begin": "\\bif\\b",
            "beginCaptures": {
                "0": {
                    "name": "keyword.silverstripe"
                }
            },
            "end": "(?=%>)",
            "patterns": [
                {
                    "include": "#commonExpressions"
                },
                {
                    "include": "#string"
                }
            ]
        },
        "includeControl": {
            "name": "meta.control.include.silverstripe",
            "begin": "\\binclude\\b",
            "beginCaptures": {
                "0": {
                    "name": "keyword.silverstripe"
                }
            },
            "end": "(?=%>)",
            "patterns": [
                {
                    "match": "[A-Za-z_][A-Za-z0-9_\\\\]*",
                    "name": "entity.name.type.silverstripe"
                },
                {
                    "match": "\\b([A-Za-z_][A-Za-z0-9_]*)\\b(?=\\s*=)",
                    "name": "entity.name.silverstripe"
                },
                {
                    "match": "=",
                    "name": "keyword.operator.silverstripe"
                },
                {
                    "match": ",",
                    "name": "punctuation.separator.argument.silverstripe"
                },
                {
                    "include": "#string"
                },
                {
                    "include": "#commonExpressions"
                }
            ]
        }
    }
}
